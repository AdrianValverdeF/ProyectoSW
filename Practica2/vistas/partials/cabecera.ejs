        <div class="user-menu">
            <%
            function mostrarSaludo(session){
                if (session == null || ! session.login){
                    return `<a class='login-btn' href='/usuarios/login'>Iniciar sesión</a>  <a class='login-btn' href='/usuarios/register'>Registarse</a>`;
                }
            
                return ` <p>¡Bienvenido, ${session.nombre}! <a class='login-btn'  href='/usuarios/logout'>Cerrar sesión</a></p>`;
            }%>
            <%- mostrarSaludo(session) %>
        </div>
