<div class="editor-eventos-container">
    <form action="/contenido/competiciones/crear" method="POST" id="competicionForm">

        <h3>Crear Competición</h3>

        <div class="form-group">
            <label for="deporte">Deporte:</label>
            <select id="deporte-competicion" name="deporte" required class="filtro-control">
                <option value="">Seleccione un deporte</option>
                <option value="FUTBOL 11">Fútbol 11</option>
                <option value="FUTBOL SALA">Fútbol sala</option>
                <option value="BALONCESTO">Baloncesto</option>
                <option value="RUGBY">Rugby</option>
                <option value="VOLEIBOL">Voleibol</option>
            </select>
        </div>

        <div class="form-group">
            <label for="genero">Género:</label>
            <select id="genero-competicion" name="genero" required class="filtro-control">
                <option value="">Seleccione género</option>
                <option value="M">Masculino</option>
                <option value="F">Femenino</option>
            </select>
        </div>

        <div class="form-group">
            <label for="evento">Evento:</label>
            <select id="evento-competicion" name="id_evento" required>
                <option value="">Seleccione primero deporte y género</option>
                <% eventos.forEach(evento => { %>
                    <option value="<%= evento.id %>"
                        data-deporte="<%= evento.deporte %>"
                        data-genero="<%= evento.genero %>">
                        <%= evento.equipoA %> vs <%= evento.equipoB %> - <%= new Date(evento.fecha).toLocaleDateString() %>
                    </option>
                <% }); %>
            </select>
        </div>

        <div class="form-group">
            <label for="precio">Precio (€):</label>
            <input type="number" id="precio" name="precio" min="0" step="0.01" required>
        </div>

        <div class="form-actions">
            <a href="/contenido/competiciones" class="admin-btn danger">Cancelar</a>
            <button type="submit" class="admin-btn">Crear Competición</button>
        </div>
    </form>
</div>
<script src="/js/crearCompeticion.js" defer></script>