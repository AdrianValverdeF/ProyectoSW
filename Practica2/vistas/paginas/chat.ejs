<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat con <%= amigo %></title>
    <link rel="stylesheet" href="/css/estilo.css">
</head>
<body>
    <main class="chat-main">
        <div class="amigos-sidebar">
            <h2>Amigos</h2>
            <ul>
                <% if (amigos && amigos.length > 0) { %>
                    <% amigos.forEach(amigo => { %>
                        <li><a href="/contenido/chat?amigo=<%= amigo.username %>"><%= amigo.username %></a></li>
                    <% }) %>
                <% } else { %>
                    <li>No tienes amigos aún.</li>
                <% } %>
            </ul>
        </div>
        <div class="amigos-chat-container">
            <div class="amigos-chat-header">
                <div class="amigos-chat-info">
                    <h2><%= amigo %></h2>
                    <span>Activo hace 5 minutos</span>
                </div>
            </div>
            <div class="amigos-chat-messages">
                <div class="chat-container">
                    <h1>Chat con <%= amigo %></h1>
                    <div class="mensajes">
                        <% if (mensajes && mensajes.length > 0) { %>
                            <% mensajes.forEach(mensaje => { %>
                                <div class="mensaje <%= mensaje.id_usuario === session.id ? 'propio' : 'ajeno' %>">
                                    <p><%= mensaje.mensaje %></p>
                                    <span><%= mensaje.created_at %></span>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p>No hay mensajes aún.</p>
                        <% } %>
                    </div>
                    <form action="/contenido/enviarMensaje" method="POST">
                        <input type="hidden" name="amigo" value="<%= amigo %>">
                        <textarea name="mensaje" placeholder="Escribe tu mensaje"></textarea>
                        <button type="submit">Enviar</button>
                    </form>
                </div>
            </div>
        </div>
    </main>
</body>
</html>