<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat con <%= amigo %></title>
    <link rel="stylesheet" href="/css/estilo.css">
</head>
<body>
    <main class="chat-main">
        <div class="amigos-sidebar">
            <ul>
                <% if (amigos && amigos.length > 0) { %>
                    <% amigos.forEach(amigo => { %>
                        <li><a href="/contenido/chat?amigo=<%= amigo %>"><%= amigo %></a></li>
                    <% }) %>
                <% } else { %>
                    <li>No tienes amigos aún.</li>
                <% } %>
            </ul>
        </div>
        <div class="amigos-chat-container">
            <div class="amigos-chat-header">
                <div class="amigos-chat-info">
                    <h2><%= amigo %></h2>
                    <span>Activo hace 5 minutos</span>
                </div>
            </div>
            <div class="amigos-chat-messages">
                <% if (mensajes && mensajes.length > 0) { %>
                    <% mensajes.forEach(mensaje => { %>
                        <div class="amigos-message">
                            <div class="amigos-message-content">
                                <%= mensaje.mensaje %>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No hay mensajes aún.</p>
                <% } %>
            </div>
            <form action="/contenido/enviarMensaje" method="POST" class="amigos-chat-input">
                <input type="hidden" name="amigo" value="<%= amigo %>">
                <textarea name="mensaje" placeholder="Escribe tu mensaje..." required></textarea>
                <button type="submit">Enviar</button>
            </form>
        </div>
    </main>
</body>
</html>