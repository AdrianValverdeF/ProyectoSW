<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/estilo.css">
</head>
<body>
    <main class="chat-main">
        <div class="amigos-sidebar">
            <h2>Amigos</h2>
            <ul>
                <% if (amigos && amigos.length > 0) { %>
                    <% amigos.forEach(amigo => { %>
                        <li><a href="/contenido/chat?amigo=<%= amigo.username %>"><%= amigo.username %></a></li>
                    <% }) %>
                <% } else { %>
                    <li>No tienes amigos aún.</li>
                <% } %>
            </ul>
        </div>

        <div class="amigos-chat-container">

            <div class="amigos-chat-header">
                <div class="amigos-chat-info">
                    <h2><%= amigo %></h2>
                    <span>Activo hace 5 minutos</span>
                </div>
            </div>

            <div class="amigos-chat-messages">
                <div class="chat-container">
                    <div class="mensajes">
                        <% if (mensajes && mensajes.length > 0) { %>
                            <% mensajes.forEach(mensaje => { %>
                                <div class="mensaje <%= mensaje.id_usuario === id_usuario ? 'propio' : 'ajeno' %>">
                                    <p><%= mensaje.mensaje %></p>
                                    <span>
                                        <%= new Date(mensaje.created_at).toLocaleString('es-ES', {
                                            hour: '2-digit',
                                            minute: '2-digit'
                                        }) %>
                                    </span>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p>No hay mensajes aún.</p>
                        <% } %>
                    </div>
                    <form class="amigos-chat-input" action="/contenido/enviarMensajePriv" method="POST">
                        <input type="hidden" name="amigo" value="<%= amigo %>">
                            <div class="forum-btn">
                                <button type="submit" id="send">
                                    <img src="/img/send_message.png">
                                </button>
                            </div>
                            <input type="text" name="mensaje" placeholder="Escribe un mensaje...">
                    </form>
                </div>
            </div>
        </div>
    </main>
</body>
</html>