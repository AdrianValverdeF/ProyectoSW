<section class="events-section">
    <h2>Proximos Eventos</h2>

    <% if (eventos && eventos.length) { %>
        <% eventos.forEach(evento=> { %>
            <a href="/eventos/<%= evento.id %>" class="event-banner">
                <div class="sport-logo">
                    <img src="../../static/img/<%= (evento.deporte || 'default').toLowerCase() %>.png"
                        alt="<%= evento.deporte || 'Sport' %> logo">
                </div>

                <div class="teams-container">
                    <div class="team">
                        <img src="../../static/img/<%= (evento.equipoA || 'default').toLowerCase() %>.jpg"
                            alt="<%= evento.equipoA || 'Team A' %> logo">
                        <span>
                            <%= evento.equipoA %>
                        </span>
                    </div>

                    <div class="vs">VS</div>

                    <div class="team">
                        <img src="../../static/img/<%= (evento.equipoB || 'default').toLowerCase() %>.jpg"
                            alt="<%= evento.equipoB || 'Team B' %> logo">
                        <span>
                            <%= evento.equipoB %>
                        </span>
                    </div>
                </div>

                <div class="event-date">
                    <%= evento.fecha ? new Date(evento.fecha).toLocaleDateString() : 'Date TBD' %>
                </div>
            </a>
            <% }); %>
                <% } else { %>
                    <div class="no-events">
                        <p>No upcoming events found</p>
                    </div>
                    <% } %>
</section>