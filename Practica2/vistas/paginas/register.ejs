<form action="/usuarios/register" method="POST" enctype="multipart/form-data" class="session-form register">
    <fieldset>
        
        <h3>Regístrate</h3>
        <div class="register-fields">
            <div><label>Nombre:</label> <input type="text" name="name" /></div>
            <div><label>Apellido:</label> <input type="text" name="surname" /></div>
            <div><label>Usuario:</label> <input type="text" name="username" /></div>
            <div><label>Contraseña:</label> <input type="password" name="password" /></div>
            <div><label>Edad:</label> <input type="number" name="age" /></div>
            <div><label>Imagen de perfil:</label> <input type="file" name="profileImage" accept="image/*" /></div>
        </div>
        <button class='form-register-btn' type="submit">Enviar</button>

        <% if (locals.error) { %>
            <p class="register-error"><strong>
                    <%= locals.error %>
                </strong></p>
        <% } %>
        
        <div class="login-ref">
            <p>¿Ya tienes cuenta? <a href="/usuarios/login">Inicia Sesión</a></p>
        </div>
    </fieldset>
</form>