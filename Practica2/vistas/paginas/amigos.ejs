<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amigos</title>
    <link rel="stylesheet" href="/css/estilo.css">
</head>
<body>
    <div class="amigos-container">
        <div class="perfil-header">
            <img src="/img/gallo.jpg" alt="Avatar" class="avatar">
            <div class="perfil-header-content">
                <h1><%= session.nombre %></h1>
                <p class="tipo-usuario"><%= session.esAdmin ? 'Administrador' : (session.esVIP ? 'Cliente VIP' : 'Cliente Normal') %></p>
            </div>
        </div>
        <div class="amigos-header">
            <h1>Amigos de <%= session.nombre %></h1>
        </div>
        <div class="amigos-content">
            <ul>
                <% if (amigos && amigos.length > 0) { %>
                    <% amigos.forEach(amigo => { %>
                        <li>
                            <img src="/img/descarga.jpeg" alt="Avatar">
                            <span class="nombre"><%= amigo %></span>
                            <div class="acciones">
                                <a href="/contenido/chat?amigo=<%= amigo %>" target="_blank">
                                    <button>Mensaje</button>
                                </a>
                                <button>Eliminar</button>
                            </div>
                        </li>
                    <% }) %>
                <% } else { %>
                    <li>No tienes amigos a√∫n.</li>
                <% } %>
            </ul>
        </div>
    </div>
</body>
</html>