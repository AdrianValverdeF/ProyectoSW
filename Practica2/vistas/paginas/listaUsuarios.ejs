<html>
    <h1>Lista de Usuarios</h1>
    <form method="GET" action="/contenido/buscarUsuarios" style="display: flex; gap: 10px; align-items: flex-start;">
        <div style="display: flex; flex-direction: column;">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username">
        </div>
        <div style="display: flex; flex-direction: column;">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre">
        </div>
        <div style="display: flex; flex-direction: column;">
            <label for="apellido">Apellido:</label>
            <input type="text" id="apellido" name="apellido">
        </div>
        <div style="display: flex; flex-direction: column;">
            <label for="edad">Edad:</label>
            <input type="number" id="edad" name="edad">
        </div>
        <div style="display: flex; flex-direction: column;">
            <label for="rol">Rol:</label>
            <input type="text" id="rol" name="rol">
        </div>
        <button type="submit" class ="search-btn">Buscar</button>
    </form>

    <ul>
        <% if (locals.usuarios && locals.usuarios.length > 0) { %>
            <% locals.usuarios.forEach(function(usuario) { %>
                <li class="usuario-card">
                    <p>
                        <strong>Username: </strong> <%= usuario.username %> 
                        <strong>Nombre: </strong> <%= usuario.nombre %>
                        <strong>Apellidos: </strong> <%= usuario.apellido %> 
                        <strong>Edad: </strong> <%= usuario.edad %>
                        <strong>Fondos: </strong> <%= usuario.fondos %> 
                        <strong>Rol: </strong> <%= usuario.rol %>
                        <a href="/contenido/modificarUsuario?id=<%=usuario.id%>">
                            <button type="submit" class="modify-btn">Modificar</button>
                        </a>
                    </p>
                </li>
            <% }); %>
        <% } else { %>
            <p>No hay usuarios disponibles.</p>
        <% } %>
    </ul></form>
</html>